<% if user_is_authorized_to_update? %>
<h1>Edit wiki</h1>

 <div class="row">
   <div class="col-md-4">
     <p>Guidelines for wikis</p>
     <ul>
       <li>They should be for the common good of all mankind.</li>
       <li>If you don't love dogs, don't post.</li>
       <li>As always, be fabulous.</li>
     </ul>
   </div>
   <div class="col-md-8">
     <%= form_for @wiki do |f| %>
       <div class="form-group">
         <%= f.label :title %>
         <%= f.text_field :title, class: 'form-control', placeholder: "Enter wiki title" %>
       </div>
       <div class="form-group">
         <%= f.label :body %>
         <%= f.text_area :body, rows: 8, class: 'form-control', placeholder: "Enter wiki body" %>
       </div>
       <% if user_is_authorized_to_delete? %>
           <div class="form-group">
               <%= f.label :private, class: 'checkbox' do %>
                  <%= f.check_box :private %> Private wiki
               <% end %>
            </div>
        <% end %>
       <div class="form-group">
         <%= f.submit "Save", class: 'btn btn-success' %>
       </div>
     <% end %>
   </div>
 </div>
 <% end %>
